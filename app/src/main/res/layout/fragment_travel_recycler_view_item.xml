<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_4"
    app:cardElevation="@dimen/margin_4">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/fragment_travel_recycler_view_item_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/circle_bookmarks_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_travel_recycler_view_item_label_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10"
            android:singleLine="true"
            android:textColor="@color/label_name"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/fragment_travel_recycler_view_item_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Direction info -->
        <TextView
            android:id="@+id/fragment_travel_recycler_view_item_direction_names"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginRight="@dimen/margin_20"
            android:ellipsize="end"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10"
            android:singleLine="true"
            android:textColor="@color/label_place_names"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/fragment_travel_recycler_view_item_direction_count"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_travel_recycler_view_item_label_name"
            app:layout_constraintRight_toRightOf="@+id/fragment_travel_recycler_view_item_direction_count"
            app:layout_constraintTop_toBottomOf="@+id/fragment_travel_recycler_view_item_label_name" />

        <TextView
            android:id="@+id/fragment_travel_recycler_view_item_direction_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginEnd="@dimen/margin_12"
            android:background="@drawable/rounded_corner_count"
            android:gravity="center"
            android:paddingStart="@dimen/margin_6"
            android:paddingEnd="@dimen/margin_6"
            android:singleLine="true"
            android:textColor="@color/notice_text"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_travel_recycler_view_item_label_name" />


        <View
            android:id="@+id/fragment_travel_recycler_view_item_horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_12"
            android:background="@color/light_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_travel_recycler_view_item_direction_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
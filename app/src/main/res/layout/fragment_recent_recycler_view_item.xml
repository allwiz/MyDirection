<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_4"
    app:cardElevation="@dimen/margin_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/fragment_recent_recycler_view_item_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/fragment_recent_recycler_view_item_place_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle_place_icon" />

        <TextView
            android:id="@+id/fragment_recent_recycler_view_item_place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"

            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:gravity="start"
            android:textColor="@color/label_name"

            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fragment_recent_recycler_view_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fragment_recent_recycler_view_item_transition_mode_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/fragment_recent_recycler_view_item_image"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recent_recycler_view_item_place_name"
            app:srcCompat="@drawable/ic_directions_car_blue" />


        <TextView
            android:id="@+id/fragment_recent_recycler_view_item_last_visit_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"


            android:layout_marginEnd="10dp"
            android:singleLine="true"
            android:text="TextView"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintEnd_toStartOf="@+id/fragment_recent_recycler_view_item_hit_count"
            app:layout_constraintStart_toEndOf="@+id/fragment_recent_recycler_view_item_transition_mode_image"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recent_recycler_view_item_place_name" />

        <TextView
            android:id="@+id/fragment_recent_recycler_view_item_hit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/text_size_12"
            android:text="30"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/fragment_recent_recycler_view_item_last_visit_date"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recent_recycler_view_item_place_name" />


        <ImageView
            android:id="@+id/fragment_recent_recycler_view_item_place_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recent_recycler_view_item_last_visit_date"
            app:srcCompat="@drawable/ic_place" />

        <TextView
            android:id="@+id/fragment_recent_recycler_view_item_place_address"
            android:layout_width="0dp"
            android:layout_height="21dp"

            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_8"

            android:layout_marginRight="@dimen/margin_10"

            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:paddingStart="@dimen/margin_4"
            android:paddingEnd="@dimen/margin_4"
            android:singleLine="true"
            android:text="TextView"
            android:gravity="start"
            android:textColor="@color/description"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragment_recent_recycler_view_item_more_image"
            app:layout_constraintStart_toEndOf="@+id/fragment_recent_recycler_view_item_place_image"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recent_recycler_view_item_last_visit_date"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/fragment_recent_recycler_view_item_more_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_more_vert" />


        <View
            android:id="@+id/fragment_recent_recycler_view_item_horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recent_recycler_view_item_place_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
